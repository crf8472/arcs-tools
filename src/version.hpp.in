#ifndef __ARCSTOOLS_VERSION_HPP___
#define __ARCSTOOLS_VERSION_HPP___

// Make settings for arcs_tools that are controlled by cmake at
// build time accessible within the source code.

#include <string>

namespace arcsapp
{

/**
 * Major version number.
 */
constexpr int ARCSTOOLS_VERSION_MAJOR = @PROJECT_VERSION_MAJOR@;

/**
 * Minor version number.
 */
constexpr int ARCSTOOLS_VERSION_MINOR = @PROJECT_VERSION_MINOR@;

/**
 * Patch level.
 */
constexpr int ARCSTOOLS_VERSION_PATCH = @PROJECT_VERSION_PATCH@;

/**
 * Version suffix (e.g. '-prealpha1', '-beta', '-rc3' etc.)
 */
constexpr auto ARCSTOOLS_VERSION_SUFFIX = "@PROJECT_VERSION_SUFFIX@";

/**
 * Version suffix as std::string
 */
const std::string ARCSTOOLS_VERSION_SUFFIX_STRING ( ARCSTOOLS_VERSION_SUFFIX );

/**
 * Textual version info.
 */
constexpr auto ARCSTOOLS_VERSION_INFO = "@PROJECT_VERSION_STRING@";

/**
 * Textual version info as std::string.
 */
const std::string ARCSTOOLS_VERSION_INFO_STRING ( ARCSTOOLS_VERSION_INFO );

/**
 * \brief Name of the binary
 */
constexpr auto ARCSTOOLS_BINARY_NAME = "@PROJECT_NAME@";

} // namespace arcsapp

#endif

